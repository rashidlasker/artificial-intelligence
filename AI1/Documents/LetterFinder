fileName = '/afs/csl.tjhsst.edu/students/2016/2016rlasker/Documents/words.txt'
file = open(fileName, 'r')
words1 = file.read()
file.close
list = words1.split()

yourWord = input('Type in your six-letter word: ')

if len(yourWord) != 6:
   exit('Wrong letter count')

for n in range(0, len(list)):
   thisWord = list[n]
   diffLetters = 0
   for x in range(len(thisWord)):
      if yourWord[x] != thisWord[x]:
         diffLetters += 1
      if diffLetters > 1:
         break
   if diffLetters == 1:
      print(thisWord)
